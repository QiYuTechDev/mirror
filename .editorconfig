root = true

[*]
charset = utf-8
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
max_line_length = 80
indent_size = 4

[*.rs]
max_line_length = 100

[*.toml]
max_line_length = 120

[*.log]
max_line_length = off

[*.yml]
indent_size = 2
max_line_length = off

[{Makefile, *.mk}]
indent_style = tab
max_line_length = off
